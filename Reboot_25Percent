- hosts: <>
  gather_facts: yes
  sudo_user: <>
  serial: "25%"
  sudo: yes
  tasks:
    - name: Update  OpenSSL and OpenSSH on RedHat
      yum: name={{ item }}
           state=latest
           update_cache=yes
      with_items:
        - openssl
        - openssh-client
        - openssh-server
      when: ansible_os_family == "RedHat"
  post_tasks:
    - name: Reboot servers
      command: reboot
